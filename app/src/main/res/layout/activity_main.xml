<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#4E3C3C"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Red Button 1 (top left) -->

<!--            First Aid-->
            <ImageButton
                android:id="@+id/firstAidBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/firstaid"
                android:contentDescription="ImageButton 1"
                android:background="@drawable/button_pink"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:layout_margin="12dp"/>

            <!-- Red Button 2 (bottom left) -->

<!--            Flooding typhoon-->
            <ImageButton
                android:id="@+id/rainBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                android:layout_weight="2"
                android:background="@drawable/button_purple"
                android:contentDescription="ImageButton 4"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/firstaid" />
        </LinearLayout>

        <!-- Purple Button 1 (top right) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/earthquakeBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                android:layout_weight="2"
                android:background="@drawable/button_purple"
                android:gravity="center"
                android:padding="16dp"
                android:text="Earthquake Survival Guide"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/shareLocationBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@drawable/button_pink"
                android:contentDescription="ImageButton 3"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/siren" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/locationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/rounded_btn"
            android:gravity="center"
            android:padding="12dp"
            android:text="Others Location"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/helpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/rounded_btn"
            android:gravity="center"
            android:padding="12dp"
            android:text="Call for help"
            android:textColor="#000000"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
