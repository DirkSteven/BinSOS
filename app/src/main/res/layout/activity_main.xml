<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f4b3b3"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BinSOS"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-black"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:padding="25dp">

        <ImageButton
            android:id="@+id/firstAidBtn"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:src="@drawable/firstaid"
            android:contentDescription="First Aid Button"
            android:background="@drawable/button_firstaid"
            android:padding="25dp"
            android:scaleType="fitCenter"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"/>

        <ImageButton
            android:id="@+id/earthquakeBtn"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:src="@drawable/prepare_earthquake"
            android:contentDescription="Earthquake Button"
            android:background="@drawable/button_earthquake"
            android:padding="25dp"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/firstAidBtn"
            android:layout_marginTop="60dp"/>

        <ImageButton
            android:id="@+id/rainBtn"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:src="@drawable/ic_bleeding"
            android:contentDescription="Rain Button"
            android:background="@drawable/button_rain"
            android:padding="25dp"
            android:scaleType="fitCenter"
            android:layout_below="@id/firstAidBtn"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:id="@+id/shareLocationBtn"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:src="@drawable/siren"
            android:contentDescription="Share Location Button"
            android:background="@drawable/button_sendloc"
            android:padding="25dp"
            android:scaleType="fitCenter"
            android:layout_below="@id/earthquakeBtn"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/locationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="Others' Location"
            android:textColor="#000000"
            android:textSize="16sp"
            android:backgroundTint="#FFD93E"
            app:cornerRadius="16dp" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/helpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="CALL FOR HELP"
            android:backgroundTint="#800020 "
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:cornerRadius="16dp"/>
    </LinearLayout>
</LinearLayout>