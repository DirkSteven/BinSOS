<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F2F4F1 "
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/firstAidBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/firstaid"
                android:contentDescription="ImageButton 1"
                android:background="@drawable/button_pink"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:layout_margin="12dp"/>

            <ImageButton
                android:id="@+id/rainBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                android:layout_weight="2"
                android:background="@drawable/button_purple"
                android:contentDescription="ImageButton 4"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/firstaid" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/earthquakeBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                android:layout_weight="2"
                android:background="@drawable/button_purple"
                android:gravity="center"
                android:padding="16dp"
                android:text="Earthquake Survival Guide"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/shareLocationBtn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@drawable/button_pink"
                android:contentDescription="ImageButton 3"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/siren" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/locationBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Others' Location"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#1E88E5"
            app:cornerRadius="16dp" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/helpBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="CALL FOR HELP"
            android:backgroundTint="#800020 "
            android:textColor="#ffffff"
            android:textSize="16sp"
            app:cornerRadius="16dp"/>
    </LinearLayout>
</LinearLayout>
