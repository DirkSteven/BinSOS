<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#f4b3b3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_arrow_back"
            android:tint="@null"
            android:backgroundTint="#f4b3b3"
            android:contentDescription="Back Button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="16dp" />
        <!-- Main Image and Title -->
        <ImageView
            android:id="@+id/floodMainImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flood"
            android:contentDescription="Main flood survival guide image" />

        <TextView
            android:id="@+id/floodTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flood Survival Guide"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4E3C3C"
            android:layout_marginTop="16dp"
            android:gravity="center" />

        <!-- Description -->
        <TextView
            android:id="@+id/floodDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Be prepared, stay safe, and survive during floods with these essential tips and techniques."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="16dp"
            android:textColor="#000000" />

        <!-- Section 1: Prepare Before the Flood -->
        <TextView
            android:id="@+id/sectionPrepareTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Prepare Before the Flood"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4E3C3C"
            android:layout_marginTop="24dp" />

        <ImageView
            android:id="@+id/prepareImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/prepare_rain"
            android:contentDescription="Image for preparing before the flood" />

        <TextView
            android:id="@+id/prepareDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Stock up on food and water.\n• Keep emergency kits ready.\n• Know your local evacuation routes."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Section 2: Stay Safe During the Flood -->
        <TextView
            android:id="@+id/sectionStaySafeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Stay Safe During the Flood"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4E3C3C"
            android:layout_marginTop="24dp" />

        <ImageView
            android:id="@+id/staySafeImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/stay_safe"
            android:contentDescription="Image for staying safe during the flood" />

        <TextView
            android:id="@+id/staySafeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Avoid walking or driving through floodwaters.\n• Move to higher ground immediately.\n• Follow instructions from local authorities."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Section 3: Recover After the Flood -->
        <TextView
            android:id="@+id/sectionRecoverTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Recover After the Flood"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4E3C3C"
            android:layout_marginTop="24dp" />

        <ImageView
            android:id="@+id/recoverImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/recover"
            android:contentDescription="Image for recovering after the flood" />

        <TextView
            android:id="@+id/recoverDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Check your home for structural damage.\n• Clean and disinfect to prevent disease.\n• Seek assistance if needed."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
