<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#4E3C3C"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Red Button 1 (top left) -->
            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/firstaid"
                android:contentDescription="ImageButton 1"
                android:background="@drawable/button_pink"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:layout_margin="12dp"/>

            <!-- Red Button 2 (bottom left) -->
            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/firstaid"
                android:contentDescription="ImageButton 4"
                android:background="@drawable/button_purple"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:layout_margin="12dp"/>
        </LinearLayout>

        <!-- Purple Button 1 (top right) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

<!--            <ImageButton-->
<!--                android:id="@+id/imageButton2"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0dp"-->
<!--                android:layout_weight="2"-->
<!--                android:src="@drawable/firstaid"-->
<!--                android:contentDescription="ImageButton 2"-->
<!--                android:background="@drawable/button_purple"-->
<!--                android:scaleType="fitCenter"-->
<!--                android:padding="16dp"-->
<!--                android:layout_margin="12dp"/>-->

            <Button
                android:id="@+id/imageButton2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Earthquake Survival Guide"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_purple"
                android:gravity="center"
                android:padding="16dp"
                android:layout_margin="12dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <!-- Purple Button 2 (bottom right) -->
            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/siren"
                android:contentDescription="ImageButton 3"
                android:background="@drawable/button_pink"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:layout_margin="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button 1"
            android:background="@drawable/rounded_btn"
            android:textColor="#000000"
            android:layout_margin="12dp"
            android:textSize="16sp"
            android:padding="12dp"
            android:gravity="center"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button 2"
            android:background="@drawable/rounded_btn"
            android:textColor="#000000"
            android:layout_margin="12dp"
            android:textSize="16sp"
            android:padding="12dp"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>
