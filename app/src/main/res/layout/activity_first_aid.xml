<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4b3b3"
    android:padding="16dp">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_arrow_back"
        android:tint="@null"
        android:contentDescription="Back Button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp" />

    <!-- Bleeding and Wounds -->
    <LinearLayout
        android:id="@+id/bleedingTile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/tile_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backBtn"
        app:layout_constraintEnd_toStartOf="@+id/breathingTile"
        app:layout_constraintBottom_toTopOf="@+id/burnsTile">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/bleeding_and_wounds"
            android:contentDescription="Bleeding and Wounds" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bleeding and Wounds"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Breathing and Heart -->
    <LinearLayout
        android:id="@+id/breathingTile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/tile_background"
        app:layout_constraintStart_toEndOf="@+id/bleedingTile"
        app:layout_constraintTop_toBottomOf="@id/backBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/burnsTile">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/breathing_and_heart"
            android:contentDescription="Breathing and Heart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Breathing and Heart"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Burns -->
    <LinearLayout
        android:id="@+id/burnsTile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/tile_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bleedingTile"
        app:layout_constraintEnd_toStartOf="@+id/injuriesTile"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/burns"
            android:contentDescription="Burns" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Burns"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Injuries and Emergencies -->
    <LinearLayout
        android:id="@+id/injuriesTile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/tile_background"
        app:layout_constraintStart_toEndOf="@+id/burnsTile"
        app:layout_constraintTop_toBottomOf="@+id/breathingTile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/injuries_and_emergencies"
            android:contentDescription="Injuries and Emergencies" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Injuries and Emergencies"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
